#!/bin/bash

if [ $# -gt 2 ]; then
    echo $#
    echo "Invalid number of arguments."
    echo "Usage: db2nii <source_dir> <output_dir>"
else
    DEFAULT_PYTHON=`python --version`
    if [[ $DEFAULT_PYTHON != Python\ 2* ]]; then
        python2 ../pyscripts/make_nifti_database.py $@
    else
        python ../pyscripts/make_nifti_database.py $@
    fi
fi
