#!/bin/bash

if [ $# -gt 3 ]; then
    echo $#
    echo "Invalid number of arguments."
    echo "Usage: searchdb <id/modality/list> <search term> </path/to/database.csv>"
else
    STIRDB=/home/03187/rstevens/STIR
    DEFAULT_PYTHON=`python --version`
    if [[ $DEFAULT_PYTHON != Python\ 2* ]]; then
        python2 $STIRDB/pyscripts/search_database.py $@
    else
        python $STIRDB/pyscripts/search_database.py $@
    fi
fi
